create table films
(
    id       int auto_increment
        primary key,
    name     varchar(100) null,
    director varchar(100) null,
    year     int          null,
    genre    varchar(100) null,
    sinopsis varchar(200) null
);

create table series
(
    id       int auto_increment
        primary key,
    name     varchar(100) null,
    director varchar(100) null,
    year     int          null,
    genre    varchar(100) null,
    synopsis varchar(200) null
);
